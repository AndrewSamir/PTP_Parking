<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_25sdp"
        tools:context=".activities.Seeker.SeekerMapsActivity" />

    <include layout="@layout/xml_map_search_bar" />

    <RelativeLayout
        android:id="@+id/rlSeekerMapsDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_gravity="bottom"
        android:background="@null"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/banner_background"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layoutDirection="locale"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/tvSeekerMapsTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="jk,mbnvvnvbvb" />

                    <TextView
                        android:id="@+id/tvSeekerMapsStreet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="jk,mbnvvnvbvb" />

                    <TextView
                        android:id="@+id/tvSeekerMapsArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="jk,mbnvvnvbvb" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvSeekerMapsPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="20 \n EGP" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:background="@drawable/background_btn_border"
                    android:text="@string/book"
                    android:textColor="@color/colorPrimary" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>