<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgProfile"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius="@dimen/_7sdp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_7sdp"
                android:textColor="@color/colorTextBrown"
                android:textSize="@dimen/_16sdp"
                tools:text="Andrew Samir" />

            <TextView
                android:id="@+id/tvProfileBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextBrown"
                tools:text="Volvo v60 " />

            <TextView
                android:id="@+id/tvProfilePlateNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextBrown"
                tools:text="Gray 115 24 " />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layoutDirection="locale"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvProfileEditProfileDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit_profile_details"
            android:textColor="@color/colorTextBlue"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProfileChangePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/change_password"
            android:textColor="@color/colorTextBlue"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvProfileNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:drawablePadding="@dimen/_20sdp"
        android:drawableStart="@drawable/ic_notification"
        android:paddingStart="@dimen/_20sdp"
        android:text="@string/notifications"
        android:textColor="@color/colorTextBrown"
        android:textSize="@dimen/_15sdp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tvProfileWalletAndPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:drawablePadding="@dimen/_20sdp"
        android:drawableStart="@drawable/ic_payment"
        android:paddingStart="@dimen/_20sdp"
        android:text="@string/wallet_and_payment"
        android:textColor="@color/colorTextBrown"
        android:textSize="@dimen/_15sdp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tvProfileInviteFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:drawablePadding="@dimen/_20sdp"
        android:drawableStart="@drawable/ic_gift"
        android:paddingStart="@dimen/_20sdp"
        android:text="@string/invite_friends"
        android:textColor="@color/colorTextBrown"
        android:textSize="@dimen/_15sdp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvProfileSavedPlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:drawablePadding="@dimen/_20sdp"
        android:drawableStart="@drawable/ic_settings"
        android:paddingStart="@dimen/_20sdp"
        android:text="@string/saved_places"
        android:textColor="@color/colorTextBrown"
        android:textSize="@dimen/_15sdp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tvProfileHelpAndSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:drawablePadding="@dimen/_20sdp"
        android:drawableStart="@drawable/ic_help"
        android:paddingStart="@dimen/_20sdp"
        android:text="@string/help_and_support"
        android:textColor="@color/colorTextBrown"
        android:textSize="@dimen/_15sdp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tvProfileYourFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:drawablePadding="@dimen/_20sdp"
        android:drawableStart="@drawable/ic_feedback"
        android:paddingStart="@dimen/_20sdp"
        android:text="@string/your_feedback"
        android:textColor="@color/colorTextBrown"
        android:textSize="@dimen/_15sdp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tvProfileSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:drawablePadding="@dimen/_20sdp"
        android:drawableStart="@drawable/ic_notification"
        android:paddingStart="@dimen/_20sdp"
        android:text="@string/sign_out"
        android:textColor="@color/colorTextBrown"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />


</LinearLayout>