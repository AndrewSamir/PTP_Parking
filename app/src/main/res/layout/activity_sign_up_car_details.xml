<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/_7sdp"
    android:layout_marginStart="@dimen/_7sdp"
    tools:context=".activities.Account.SignUpCarDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/car_details"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spRegisterCarBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:padding="@dimen/_15sdp"
            android:prompt="@string/CarBrand"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spRegisterCarModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:padding="@dimen/_15sdp"
            android:prompt="@string/car_model"
            android:spinnerMode="dialog" />
    </LinearLayout>
</ScrollView>